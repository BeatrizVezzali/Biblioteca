@model Usuario


<h1>Registre um usuário</h1>


<form asp-action="Registro" method="post">

    <input type="text" asp-for="Nome" id="Nome" placeholder="Nome">

    <input type="text" asp-for="Login" id="Login" placeholder="Login">

    <input type="text" asp-for="Senha" id="Senha" placeholder="Senha">

    

    <select asp-for="Tipo" id="Tipo">

        <option value="@Usuario.ADMIN">Administrador</option>

        <option value="@Usuario.PADRAO">Padrão</option>

    </select>


    <input type="submit" value="Registrar">

    

</form>